generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Superhero {
  id                 String  @id @default(uuid())
  nickname           String  @db.VarChar(100)
  real_name          String  @db.VarChar(120)
  origin_description String  @db.Text
  superpowers        String  @db.Text  
  catch_phrase       String  @db.Text
  images             Image[] 
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Image {
  id          String   @id @default(uuid())
  url         String
  filename    String
  superhero   Superhero? @relation(fields: [superheroId], references: [id], onDelete: Cascade)
  superheroId String?
  createdAt   DateTime @default(now())
}
